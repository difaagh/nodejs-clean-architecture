{
  "name": "clean-architecture",
  "version": "1.0.0",
  "private": true,
  "main": "dist/main.js",
  "scripts": {
    "start-prod": "export NODE_ENV=production && node .",
    "start-dev": "export NODE_ENV=development && node .",
    "typeorm": "./node_modules/.bin/typeorm",
    "test": "./node_modules/.bin/jest",
    "tsc": "./node_modules/.bin/tsc --project tsconfig.build.json && tscpaths -p tsconfig.json -s ./src -o ./dist --silent",
    "lint": "./node_modules/.bin/eslint . --ext .ts --quiet --fix",
    "build": "npm run lint && npm run tsc",
    "restart": "npm run build && npm run start"
  },
  "prettier": {
    "tabWidth": 2,
    "printWidth": 140
  },
  "jest": {
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src/"
    ],
    "moduleFileExtensions": ["ts", "js"],
    "testMatch": ["<rootDir>/src/**/*.test.+(ts)"],
    "transform": {
     "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "moduleNameMapper": {
     "@config/(.*)": "<rootDir>/src/config/$1",
     "@controller/(.*)": "<rootDir>/src/controller/$1",
     "@exception/(.*)": "<rootDir>/src/exception/$1",
     "@interface/(.*)": "<rootDir>/src/interface/$1",
     "@lib/(.*)": "<rootDir>/src/lib/$1",
     "@middleware/(.*)": "<rootDir>/src/middleware/$1",
     "@model/(.*)": "<rootDir>/src/model/$1",
     "@services/(.*)": "<rootDir>/src/services/$1",
     "@validation/(.*)": "<rootDir>/src/validation/$1"
    }
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": 2020,
      "sourceType": "module"
    },
    "extends": [
      "plugin:@typescript-eslint/recommended",
      "prettier/@typescript-eslint",
      "plugin:prettier/recommended"
    ],
    "rules": {
      "@typescript-eslint/no-explicit-any": 0,
      "@typescript-eslint/no-unused-vars": 0,
      "@typescript-eslint/explicit-module-boundary-types": 0,
      "@typescript-eslint/no-var-requires": 0,
      "@typescript-eslint/ban-ts-comment": 0,
      "@typescript-eslint/no-inferrable-types": 2,
      "@typescript-eslint/no-extra-semi": 0,
      "@typescript-eslint/prefer-as-const": 1,
      "prefer-const": 1,
      "@typescript-eslint/ban-types": [
        "error",
        {
          "types": {
            "{}": false,
            "Object": false,
            "Function": false
          },
          "extendDefaults": true
        }
      ]
    }
  },
  "engines": {
    "node": "14.x"
  },
  "dependencies": {
    "axios": "^0.24.0",
    "bcrypt": "^5.0.1",
    "cors": "^2.8.5",
    "dayjs": "^1.9.7",
    "dotenv": "^8.2.0",
    "express": "^4.17.2",
    "express-session": "^1.17.1",
    "joi": "^17.3.0",
    "jsonwebtoken": "^8.5.1",
    "nanoid": "^3.1.20",
    "pg": "^8.7.1",
    "ramda": "0.25.0",
    "reflect-metadata": "^0.1.13",
    "typeorm": "^0.2.41",
    "typeorm-transactional-cls-hooked": "^0.1.21",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@herbcaudill/tscpaths": "0.0.17",
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.12",
    "@types/express-session": "^1.17.3",
    "@types/jest": "^27.4.0",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/node": "^14.0.12",
    "@types/ramda": "0.25.24",
    "@types/supertest": "^2.0.10",
    "@types/uuid": "^8.3.0",
    "@typescript-eslint/eslint-plugin": "^4.10.0",
    "@typescript-eslint/parser": "^4.10.0",
    "eslint": "^7.6.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "jest": "^27.4.5",
    "jest-environment-node-single-context": "^27.2.0",
    "prettier": "^2.2.1",
    "supertest": "^6.0.1",
    "ts-jest": "^27.1.2",
    "ts-node": "^10.4.0",
    "typeorm-test-transactions": "^3.6.1",
    "typeorm-transactional-tests": "^1.1.5",
    "types-joi": "^2.1.0",
    "typescript": "^4.5.4"
  }
}

